<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FooTube" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize other attributes if needed -->
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="Theme.FooTube" parent="Base.Theme.FooTube">
        <!-- Dark mode icon -->
        <item name="meatube_with_text_logo">@drawable/meatube_logo_with_text</item>
        <item name="share">@drawable/ic_share_white</item>
        <item name="Unlike">@drawable/ic_thumb_down_white</item>
        <item name="Like">@drawable/ic_thumb_up_white</item>
        <item name="Unlike_Like_Color_Text">@color/white</item>
    </style>
