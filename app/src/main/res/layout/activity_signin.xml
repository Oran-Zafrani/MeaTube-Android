<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignIn">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/meatube_logo"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:src="@drawable/meatube_logo_with_text_removebg_preview"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:drawablePadding="8dp" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/red"
            android:layout_marginBottom="16dp" />

        <ImageButton
            android:id="@+id/btnDarkMode"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dark_mode_white"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvSignUpLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign Up"
            android:textColor="@android:color/holo_blue_light"
            android:clickable="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Signinguest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In as a Guest"
            android:textColor="@android:color/holo_blue_light"
            android:clickable="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password is incorrect"
            android:textColor="#FF0000"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>